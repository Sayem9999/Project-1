{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "id": "api_server",
        "path": "backend",
        "message": "powershell -ExecutionPolicy Bypass -Command \".\\start_production_local.ps1 -Port 8000\"",
        "daemon": true
      }
    },
    {
      "method": "shell.run",
      "params": {
        "id": "worker_node",
        "path": "backend",
        "message": "powershell -ExecutionPolicy Bypass -Command \"$env:CELERY_VIDEO_QUEUE='video_local'; .\\run_worker.ps1\"",
        "daemon": true
      }
    },
    {
      "method": "shell.run",
      "params": {
        "id": "frontend_app",
        "path": "frontend",
        "message": "npm run dev",
        "daemon": true
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "<h3>Proedit Hub Initialized</h3><p>API and Worker are starting. Check shell tabs for logs.</p>"
      }
    }
  ]
}