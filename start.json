{
    "run": [
        {
            "method": "shell.run",
            "params": {
                "id": "api",
                "message": "powershell -ExecutionPolicy Bypass -File .\\backend\\start_production_local.ps1",
                "on": [
                    {
                        "event": "/Uvicorn running on/i",
                        "next": 1
                    }
                ]
            }
        },
        {
            "method": "shell.run",
            "params": {
                "id": "worker",
                "message": "powershell -ExecutionPolicy Bypass -Command \"$env:CELERY_VIDEO_QUEUE='video_local'; .\\backend\\run_worker.ps1\"",
                "on": [
                    {
                        "event": "/ready/i",
                        "next": 2
                    }
                ]
            }
        },
        {
            "method": "notify",
            "params": {
                "html": "<h3>Proedit Hub is Live! ðŸš€</h3><p>API and Worker are running in separate background tabs. Check the tabs on the left.</p>"
            }
        }
    ]
}